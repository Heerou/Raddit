<div class="page-header">
  <h1><a href="<%= @link.url %>"><%= @link.tittle %></a><br><small>Submitted by <%=  @link.user.email %></small></h1>
</div>

<%#boto para ver la url%>
<div class="btn-group">
  <%= link_to 'Visit URL',  @link.url, class: "btn btn-primary" %>
</div>

<%#boto para eliminar y modificar%>
<% if @link.user == current_user%>
  <div class="btn-group">
    <%= link_to 'Edit', edit_link_path(@link), class:"btn btn-default"  %>
    <%= link_to 'Destroy', @link, method: :delete, data: {confirm: 'Are you sure?'}, class:"btn btn-danger"  %>
  </div>
<% end %>
